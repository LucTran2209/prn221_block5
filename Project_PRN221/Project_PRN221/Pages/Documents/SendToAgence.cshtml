@page
@using Project_PRN221.Models;
@model Project_PRN221.Pages.Documents.SendToAgenceModel

@{
    ViewData["Title"] = "SendToAgence";
}


<section class="section-primary sign-in pt-112 pb-90">
    <div class="container">
        <div class="woocommerce">
            <h4>Mẫu Gửi</h4>
            <form method="post" class="woocommerce-form woocommerce-form-login login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Số Ký Hiệu</label>
                    <input class="woocommerce-Input woocommerce-Input--text input-text form-control" name="documentNumber" class="form-control" />
                    <span asp-validation-for="SendDocument.Message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Chọn cơ quan</label>

                    <select class="woocommerce-Input woocommerce-Input--text input-text form-control" class="form-control" asp-for="AgenceId" asp-items="@((SelectList)ViewData["AgenceId"])"></select>

                </div>

                <div class="form-group">
                    <label asp-for="SendDocument.Message" class="control-label"></label>
                    <input class="woocommerce-Input woocommerce-Input--text input-text form-control" asp-for="Message" class="form-control" />
                    <span asp-validation-for="SendDocument.Message" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Gửi" class="btn btn-primary" />
                </div>
            </form>
            @if (ViewBag.Error != null)
            {
                <p>@ViewBag.Error</p>
            }
        </div>
    </div>

</section>