@page
@model Project_PRN221.Pages.User.RegisterModel
@{
}
<section class="page-breadcrumb">
    <div class="container">
        <div class="row justify-content-between align-content-center">
            <div class="col-md-auto">
                <h3>Create an account</h3>
            </div>
            <div class="col-md-auto">
                <ul class="au-breadcrumb">
                    <li>
                        <a href="/index">Home</a>
                    </li>
                    <li>
                        <a href="#">My Account</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- SIGN UP -->
<section class="section-primary sign-up pt-112 pb-90">
    <div class="container">
        <h4>Create an account</h4>
        <form method="post">

            <div class="form-holder">
                <label>Full Name</label>
                <input type="text" asp-for="User.FullName" asp-validation-for="User.FullName" class="form-control" />
                <span class="msg-error" asp-validation-for="User.FullName"></span>
            </div>
            <div class="form-holder">
                <label>User Name</label>
                <input type="text" asp-for="User.UserName" asp-validation-for="User.UserName" class="form-control" />
                <span class="msg-error" asp-validation-for="User.UserName"></span>
            </div>
            <div class="form-holder">
                <label>Avatar</label>
                <input type="text" asp-for="User.Avatar" asp-validation-for="User.Avatar" class="form-control" />
                <span class="msg-error" asp-validation-for="User.Avatar"></span>
            </div>
            <div class="form-holder">
                <label>Email</label>
                <input type="text" asp-for="User.Email" asp-validation-for="User.Email" class="form-control" />
                <span class="msg-error" asp-validation-for="User.Email"></span>
            </div>
            <div class="form-holder">
                <label>Password</label>
                <input type="password" asp-for="User.Password" asp-validation-for="User.Password" class="form-control" />
                <span class="msg-error" asp-validation-for="User.Password"></span>
            </div>
            <div class="form-holder">
                <label>Phone</label>
                <input type="text" asp-for="User.Phone" asp-validation-for="User.Phone" class="form-control" />
                <span class="msg-error" asp-validation-for="User.Phone"></span>
            </div>
            <input asp-for="User.RoleId" value="2" type="hidden" />


            <input class="au-btn round has-bg" type="submit" name="submit" value="Sign in" />
            <a href="/index" class="return-link">Return to Store</a>
        </form>
        @if (ViewBag.Error != null)
        {
            <p>@ViewBag.Error</p>
        }
    </div>
</section>