@page
@using System.Security.Claims;
@model Project_PRN221.Pages.Documents.CreateModel
@{
}

<section class="section-primary sign-in pt-112 pb-90">
	<div class="container">
		<div class="woocommerce">
			<h4>Tạo mới văn bản</h4>
			<form method="post" enctype="multipart/form-data">
				<div class="form-holder">
					<label >Tiêu Đề<span class="required">*</span></label>
					<input type="text" class="woocommerce-Input woocommerce-Input--text input-text form-control" asp-for="document.Title"  value="">
				</div>

				<div class="form-holder">
					<label >Số ký hiệu<span class="required">*</span></label>
					<input type="text" class="woocommerce-Input woocommerce-Input--text input-text form-control" asp-for="document.DocumentNumber" value="">
				</div>

				<p>@User.FindFirstValue("AccountId")</p>

				<div class="form-holder">
					<label >Loại văn bản<span class="required">*</span></label>				
					<select asp-for="document.CategoryId" class="form-control" asp-items="@((SelectList)ViewData["CategoryId"])"></select>
				</div>

				<div class="form-holder">
					<label>Mô tả<span class="required">*</span></label>
					<input type="text" class="woocommerce-Input woocommerce-Input--text input-text form-control" asp-for="document.Description" value="">
				</div>

				<div class="form-holder">
					<label >Người ký văn bản<span class="required">*</span></label>
					<input type="text" class="woocommerce-Input woocommerce-Input--text input-text form-control" asp-for="document.HumanSign" value="">
				</div>

				<div>
					<label >Nội dung<span class="required">*</span></label>
					<input asp-for="FileInput" type="file" id="FileInput" name="FileInput" />
				</div>
					
				<div class="form-holder last">
					<input type="submit" class="woocommerce-Button button au-btn round has-bg" name="save" value="Save">			
				</div>
			</form>
			@if (ViewBag.Error != null)
			{
				<p>@ViewBag.Error</p>
			}
		</div>
	</div>

</section>