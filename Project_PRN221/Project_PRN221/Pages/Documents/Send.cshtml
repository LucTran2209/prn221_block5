@page
@model Project_PRN221.Pages.Documents.SendModel
@{
}
@using System.Security.Claims;

<form method="post" enctype="multipart/form-data" class="woocommerce-form woocommerce-form-login login">
	<div class="form-holder">
		<label>Tiêu Đề<span class="required">*</span></label>
		<input type="text" class="woocommerce-Input woocommerce-Input--text input-text form-control"  required>
	</div>

	<div class="form-holder">
		<label>Số ký hiệu<span class="required">*</span></label>
		<input type="text" class="woocommerce-Input woocommerce-Input--text input-text form-control"  required />
	</div>

	<input type="hidden"  value="@User.FindFirstValue("AccountId")" />

	<div class="form-holder">
		<label>Mô tả<span class="required">*</span></label>
		<input type="text" class="woocommerce-Input woocommerce-Input--text input-text form-control" value="" required>
	</div>

	<div class="form-holder">
		<label>Người ký văn bản<span class="required">*</span></label>
		<input type="text" class="woocommerce-Input woocommerce-Input--text input-text form-control"  value="" required>
	</div>

	<div>
		<label>Nội dung<span class="required">*</span></label>
		<input  type="file" id="FileInput" name="FileInput" required />
	</div>

	<div class="form-holder last">
		<input type="submit" class="woocommerce-Button button au-btn round has-bg" name="save" value="Save">
	</div>
</form>